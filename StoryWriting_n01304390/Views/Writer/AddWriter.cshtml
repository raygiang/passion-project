
@{
    ViewBag.Title = "AddWriter";
}

<h2>Add a Writer</h2>

<!-- Form to add a new writer -->
<form method="POST" action="/Writer/Create">
    <div class="form-row">
        <label for="writer-first-name">First Name:</label>
        <input type="text" id="writer-first-name" name="new_writer_first_name" />
    </div>
    <div class="form-row">
        <label for="writer-last-name">Last Name:</label>
        <input type="text" id="writer-last-name" name="new_writer_last_name" />
    </div>
    <div class="form-row">
        <label for="writer-username">Username:</label>
        <input type="text" id="writer-username" name="new_writer_username" />
    </div>
    <div class="form-row">
        <input type="submit" value="Submit" />
    </div>
</form>
